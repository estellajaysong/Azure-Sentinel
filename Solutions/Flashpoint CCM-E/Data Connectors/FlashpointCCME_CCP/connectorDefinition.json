{
    "type": "Microsoft.SecurityInsights/dataConnectorDefinitions",
    "apiVersion": "2022-09-01-preview",
    "name": "FlashpointCCME_CCP",
    "location": "{{location}}",
    "kind": "Customizable",
    "properties": {
        "connectorUiConfig": {
            "id": "FlashpointCCME_CCP",
            "title": "Flashpoint CCM-E",
            "publisher": "Flashpoint",
            "descriptionMarkdown": "CCM-E Data from Flashpoint",
            "graphQueriesTableName": "CCME5_CL",
            "graphQueries": [
                {
                    "metricName": "Events",
                    "legend": "Events",
                    "baseQuery": "CCME5_CL"
                }
            ],
            "sampleQueries": [
                {
                    "description": "Get sample of CCME data",
                    "query": "{{graphQueriesTableName}}\n | take 10"
                }
            ],
            "dataTypes": [
                {
                    "name": "CCME5_CL",
                    "lastDataReceivedQuery": "CCME5_CL\n | where TimeGenerated > ago(7d) | summarize Time = max(TimeGenerated)\n | where isnotempty(Time)"
                }
            ],
            "connectivityCriteria": [
                {
                    "type": "HasDataConnectors"
                }
            ],
            "availability": {
                "isPreview": false
            },
            "permissions": {
                "resourceProvider": [
                    {
                        "provider": "Microsoft.OperationalInsights/workspaces",
                        "permissionsDisplayText": "Read and Write permissions are required.",
                        "providerDisplayName": "Workspace",
                        "scope": "Workspace",
                        "requiredPermissions": {
                            "write": true,
                            "read": true,
                            "delete": true
                        }
                    }
                ],
                "customs": [
                    {
                        "name": "Flashpoint API token",
                        "description": "A Flaspoint API Token is required. See Docs."
                    }
                ]
            },
            "instructionSteps": [
                {
                    "title": "Enter Flashpoint Details",
                    "description": "Enter details for the Flashpoint CCM-E data connector",
                    "instructions": [
                        {
                            "parameters": {
                                "text": "Get an API Token from Flashpoint Ignite",
                                "visible": true,
                                "inline": true
                            },
                            "type": "InfoMessage"
                        },
                        {
                            "type": "Textbox",
                            "parameters": {
                                "label": "API Token",
                                "placeholder": "Enter your API Token",
                                "type": "password",
                                "name": "ApiToken"
                            }
                        },
                        {
                            "parameters": {
                                "text": "Filter the results by password length, \ntestnewline",
                                "visible": true,
                                "inline": true
                            },
                            "type": "InfoMessage"
                        },
                        {
                            "type": "Textbox",
                            "parameters": {
                                "label": "Password Length",
                                "placeholder": "*",
                                "type": "text",
                                "name": "PasswordLength"
                            }
                        },
                        {
                            "parameters": {
                                "text": "Filter the results by whether the password contains a lowercase letter, e.g. true will contain only results with at least one lowercase letter, and false will contain results without any lowercase letters",
                                "visible": true,
                                "inline": true
                            },
                            "type": "InfoMessage"
                        },
                        {
                            "type": "Textbox",
                            "parameters": {
                                "label": "Password Has Number",
                                "placeholder": "*",
                                "type": "text",
                                "name": "PasswordHasNumber"
                            }
                        },
                        {
                            "parameters": {
                                "text": "Filter the results by whether the password contains a number, e.g. true will contain only results with at least one number, and false will contain results without any numbers",
                                "visible": true,
                                "inline": true
                            },
                            "type": "InfoMessage"
                        },
                        {
                            "type": "Textbox",
                            "parameters": {
                                "label": "Password Has Lowercase",
                                "placeholder": "true, false, or * (for all passwords)",
                                "type": "text",
                                "name": "PasswordHasLowercase"
                            }
                        },
                        {
                            "parameters": {
                                "text": "Filter the results by whether the password contains a uppercase letter, e.g. true will contain only results with at least one uppercase letter, and false will contain results without any uppercase letters",
                                "visible": true,
                                "inline": true
                            },
                            "type": "InfoMessage"
                        },
                        {
                            "type": "Textbox",
                            "parameters": {
                                "label": "Password Has Uppercase",
                                "placeholder": "true, false, or * (for all passwords)",
                                "type": "text",
                                "name": "PasswordHasUppercase"
                            }
                        },
                        {
                            "parameters": {
                                "text": "",
                                "visible": true,
                                "inline": true
                            },
                            "type": "InfoMessage"
                        },
                        {
                            "type": "Textbox",
                            "parameters": {
                                "label": "Password Has Symbol",
                                "placeholder": "true, false, or * (for all passwords)",
                                "type": "text",
                                "name": "PasswordHasSymbol"
                            }
                        },
                        {
                            "type": "ConnectionToggleButton",
                            "parameters": {
                                "connectLabel": "connect",
                                "name": "connect"
                            }
                        }
                    ]
                }
            ]
        }
    }
}